# ============================================
# Finance Tracker - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# --- Database (PostgreSQL) ---
DATABASE_URL="postgresql://finance_user:finance_pass_dev@localhost:5432/finance_tracker?schema=public"

# --- Redis ---
REDIS_URL="redis://localhost:6379"

# --- JWT Authentication ---
JWT_SECRET="change-this-to-a-strong-random-secret-in-production"
JWT_REFRESH_SECRET="change-this-to-another-strong-random-secret"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# --- Server ---
PORT=3001
NODE_ENV="development"
CORS_ORIGIN="http://localhost:5173"

# --- Cloudinary (Receipt uploads) ---
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# --- Exchange Rate API ---
EXCHANGE_RATE_API_KEY=""
EXCHANGE_RATE_BASE_URL="https://v6.exchangerate-api.com/v6"

# --- Sentry (Error tracking - optional) ---
SENTRY_DSN=""

# --- Frontend (Vite uses VITE_ prefix) ---
VITE_API_URL="http://localhost:3001/api/v1"
